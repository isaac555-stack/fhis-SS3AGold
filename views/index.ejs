  <div>
    <img src="/icons/users-round.svg" />
    <p>Total Students</p>
    <h2><%= totalStudents %></h2>
  </div>
  <div>
    <img src="/icons/circle-dollar-sign.svg" />
    <p>Total Payments</p>
    <h2>₦<%= String(totalPayments) %></h2>
  </div>
