    <img src="/icons/wallet-cards.svg" />
    <p>Total Balance</p>
    <h2>₦<%= Number(totalBalance).toLocaleString() %></h2>
  </div>
  <div>
    <img src="/icons/coins.svg" />
    <p>Total Fees</p>
    <h2>₦<%= Number(totalFees).toLocaleString() %></h2>
  </div>
</div>

